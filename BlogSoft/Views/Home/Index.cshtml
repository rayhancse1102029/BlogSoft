
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div style="width: 100%; height: 100%;text-align: center;" id="loader_div_id">
    <img src="~/images/loader_02.gif" style="height: 500px; width: 700px; margin-left: auto" />
</div>

<!-- Begin Page Content -->
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Dashboard</h1>
    <a asp-area="MasterData" asp-controller="Gender" asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
